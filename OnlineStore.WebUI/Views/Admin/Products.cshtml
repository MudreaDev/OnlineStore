@model IEnumerable<OnlineStore.Domain.Entities.Product>
@using OnlineStore.Domain.Entities

@{
    ViewData["Title"] = "Manage Products";
}

<style>
    .admin-page {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .page-top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-top h1 {
        font-size: 1.85rem;
        font-weight: 700;
        color: #1a1a1a;
        letter-spacing: -0.02em;
    }

    .btn-add {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.7rem 1.4rem;
        background: #1a1a1a;
        color: #fff;
        border-radius: 10px;
        font-size: 0.9rem;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.2s, transform 0.15s;
    }

    .btn-add:hover {
        background: #111;
        transform: translateY(-1px);
    }

    .table-card {
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        overflow: hidden;
    }

    .products-table {
        width: 100%;
        border-collapse: collapse;
    }

    .products-table thead tr {
        background: #f9fafb;
        border-bottom: 1px solid #e5e7eb;
    }

    .products-table th {
        padding: 0.85rem 1.25rem;
        text-align: left;
        font-size: 0.72rem;
        font-weight: 700;
        color: #9ca3af;
        text-transform: uppercase;
        letter-spacing: 0.07em;
        white-space: nowrap;
    }

    .products-table tbody tr {
        border-bottom: 1px solid #f3f4f6;
        transition: background 0.15s;
    }

    .products-table tbody tr:last-child { border-bottom: none; }

    .products-table tbody tr:hover { background: #fafafa; }

    .products-table td {
        padding: 1rem 1.25rem;
        font-size: 0.9rem;
        color: #374151;
        vertical-align: middle;
    }

    .product-name {
        font-weight: 600;
        color: #1a1a1a;
        font-size: 0.95rem;
    }

    .product-price {
        font-weight: 700;
        color: #1a1a1a;
        font-size: 0.95rem;
        white-space: nowrap;
    }

    .type-badge {
        display: inline-block;
        padding: 0.2rem 0.65rem;
        border-radius: 99px;
        font-size: 0.72rem;
        font-weight: 700;
        letter-spacing: 0.04em;
    }

    .type-electronic { background: #eff6ff; color: #1d4ed8; }
    .type-clothing { background: #fdf4ff; color: #7e22ce; }
    .type-vehicle { background: #fff7ed; color: #c2410c; }
    .type-default { background: #f3f4f6; color: #374151; }

    .spec-tag {
        display: inline-block;
        background: #f3f4f6;
        color: #6b7280;
        padding: 0.15rem 0.55rem;
        border-radius: 6px;
        font-size: 0.78rem;
        margin-right: 0.25rem;
    }

    .spec-tag strong {
        color: #374151;
        font-weight: 600;
    }

    .actions-cell {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        padding: 0.35rem 0.8rem;
        border-radius: 7px;
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        border: none;
        font-family: 'Inter', sans-serif;
        text-decoration: none;
        transition: background 0.15s, color 0.15s;
    }

    .btn-edit {
        background: #f3f4f6;
        color: #374151;
    }
    .btn-edit:hover { background: #e5e7eb; color: #1a1a1a; }

    .btn-clone {
        background: #ecfdf5;
        color: #065f46;
    }
    .btn-clone:hover { background: #d1fae5; }

    .btn-delete {
        background: #fef2f2;
        color: #dc2626;
    }
    .btn-delete:hover { background: #fee2e2; }

    .pagination {
        display: flex;
        gap: 0.4rem;
        justify-content: center;
        margin-top: 1.5rem;
    }

    .page-link {
        padding: 0.45rem 0.9rem;
        border: 1.5px solid #e5e7eb;
        border-radius: 8px;
        color: #374151;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.875rem;
        transition: all 0.15s;
    }

    .page-link:hover { border-color: #10b981; color: #10b981; }
    .page-link.active { background: #1a1a1a; color: #fff; border-color: #1a1a1a; }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #9ca3af;
    }

    .empty-state p { margin-top: 0.5rem; font-size: 0.9rem; }
</style>

<div class="admin-page">
    <div class="page-top">
        <h1>Products <span style="color:#10b981">Management</span></h1>
        <a asp-action="AddProduct" class="btn-add">+ Add Product</a>
    </div>

    <div class="table-card">
        @if (!Model.Any())
        {
            <div class="empty-state">
                <div style="font-size:2.5rem; margin-bottom:0.5rem;">ðŸ“¦</div>
                <strong>No products yet</strong>
                <p>Get started by adding your first product.</p>
            </div>
        }
        else
        {
            <table class="products-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Type</th>
                        <th>Specifications</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td class="product-name">@product.Name</td>
                            <td class="product-price">@product.Price.ToString("C")</td>
                            <td>
                                @{
                                    var typeName = product.GetType().Name.Replace("Product", "");
                                    var typeClass = typeName switch {
                                        "Electronic" => "type-electronic",
                                        "Clothing" => "type-clothing",
                                        "Vehicle" => "type-vehicle",
                                        _ => "type-default"
                                    };
                                }
                                <span class="type-badge @typeClass">@typeName</span>
                            </td>
                            <td>
                                @if (product is ElectronicProduct electro)
                                {
                                    <span class="spec-tag"><strong>Warranty</strong> @electro.WarrantyMonths mo</span>
                                }
                                else if (product is ClothingProduct clothing)
                                {
                                    <span class="spec-tag"><strong>Size</strong> @clothing.Size</span>
                                    <span class="spec-tag"><strong>Material</strong> @clothing.Material</span>
                                }
                                else if (product is VehicleProduct vehicle)
                                {
                                    <span class="spec-tag"><strong>@vehicle.Brand</strong> @vehicle.Model</span>
                                    <span class="spec-tag">@vehicle.Year</span>
                                }
                            </td>
                            <td>
                                <span style="font-weight:600; color: @(product.Stock > 0 ? "#065f46" : "#dc2626");">
                                    @product.Stock
                                </span>
                            </td>
                            <td>
                                <div class="actions-cell">
                                    <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn-action btn-edit">Edit</a>
                                    <form asp-action="CloneProduct" asp-route-id="@product.Id" method="post" style="display:inline">
                                        <button type="submit" class="btn-action btn-clone">Clone</button>
                                    </form>
                                    <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post" style="display:inline"
                                          onsubmit="return confirm('Delete \'@product.Name\'? This cannot be undone.')">
                                        <button type="submit" class="btn-action btn-delete">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <a asp-action="Products" asp-route-page="@i"
                   class="page-link @(ViewBag.CurrentPage == i ? "active" : "")">@i</a>
            }
        </div>
    }
</div>
