@using OnlineStore.Domain.Entities
@{
    ViewData["Title"] = "New Inventory Item";
}

<style>
    .admin-form-container {
        max-width: 650px;
        margin: 3rem auto 6rem;
    }

    .form-card {
        background: #fff;
        border: 1px solid var(--border-subtle);
        border-radius: 32px;
        padding: 4rem;
        box-shadow: var(--shadow-lg);
    }

    .form-title {
        font-family: var(--font-display);
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--midnight);
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }

    .form-subtitle {
        font-family: var(--font-body);
        font-size: 0.9375rem;
        color: var(--text-muted);
        margin-bottom: 3rem;
    }

    .form-section-title {
        font-family: var(--font-display);
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--accent-primary);
        margin-bottom: 1.5rem;
        display: block;
    }

    .field-group {
        margin-bottom: 2rem;
    }

    .field-label {
        font-size: 0.8125rem;
        font-weight: 700;
        color: var(--midnight);
        margin-bottom: 0.625rem;
        display: block;
    }

    .premium-input {
        width: 100%;
        background: var(--bg-base);
        border: 1.5px solid var(--border-subtle);
        border-radius: 12px;
        padding: 0.875rem 1.25rem;
        font-family: var(--font-body);
        font-size: 0.9375rem;
        transition: var(--transition-smooth);
        outline: none;
    }

    .premium-input:focus {
        background: #fff;
        border-color: var(--accent-primary);
        box-shadow: 0 0 0 4px rgba(5, 150, 105, 0.08);
    }

    .type-container {
        background: rgba(5, 150, 105, 0.03);
        border-left: 3px solid var(--accent-primary);
        padding: 2rem;
        border-radius: 0 16px 16px 0;
        margin: 2rem 0;
    }

    /* Image Upload Area */
    .upload-box {
        border: 2px dashed var(--border-bold);
        border-radius: 20px;
        padding: 3rem;
        text-align: center;
        cursor: pointer;
        transition: var(--transition-smooth);
        background: var(--bg-base);
    }

    .upload-box:hover {
        border-color: var(--accent-primary);
        background: #fff;
    }

    .upload-icon-wrap {
        width: 48px;
        height: 48px;
        background: #fff;
        border: 1px solid var(--border-subtle);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.25rem;
        color: var(--accent-primary);
        box-shadow: var(--shadow-sm);
    }

    .preview-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(90px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
    }

    .preview-thumb {
        position: relative;
        aspect-ratio: 1;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid var(--border-subtle);
        box-shadow: var(--shadow-sm);
    }

    .preview-thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .btn-submit-form {
        background: var(--midnight);
        color: #fff;
        border: none;
        border-radius: 16px;
        padding: 1.25rem;
        font-family: var(--font-display);
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        width: 100%;
        margin-top: 3rem;
        transition: var(--transition-smooth);
        box-shadow: var(--shadow-md);
    }

    .btn-submit-form:hover {
        background: var(--accent-primary);
        transform: translateY(-2px);

    box-shadow: 0 10px 30px rgba(5, 150, 105, 0.2);
    }

    .remove-thumb {
        position: absolute;
        top: 4px;
        right: 4px;
        background: rgba(255, 255, 255, 0.9);
        border: none;
        width: 22px;
        height: 22px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: #dc2626;
        font-size: 14px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
</style>

<div class="admin-form-container fade-in">
    <div class="form-header">
        <h1 class="form-title">Add Item</h1>
        <p class="form-subtitle">Define the characteristics of your new collection piece.</p>
    </div>

    <div class="form-card">
        <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
            <span class="form-section-title">Core Identity</span>

            <div class="field-group">
                <label for="Type" class="field-label">Category Classification</label>
                <select name="Type" id="Type" class="premium-input" onchange="toggleFields()">
                    <option value="Electronic">Electronic</option>
                    <option value="Clothing">Clothing</option>
                    <option value="Vehicle">Vehicle</option>
                </select>
            </div>

            <div class="field-group">
                <label for="Name" class="field-label">Product Naming</label>
                <input type="text" name="Name" id="Name" class="premium-input" placeholder="Enter an elegant name..." required />
            </div>

            <div class="field-group">
                <label for="Price" class="field-label">Retail Value (€)</label>
                <input type="number" name="Price" id="Price" step="0.01" class="premium-input" placeholder="0.00" required />
            </div>

            <div class="field-group">
                <label for="Stock" class="field-label">Initial Stock</label>
                <input type="number" name="Stock" id="Stock" class="premium-input" value="10" required />
            </div>

            <div id="ElectronicFields" class="type-container">
                <span class="form-section-title" style="color: var(--midnight); font-size: 0.65rem;">Tech Specs</span>
                <div class="field-group" style="margin-bottom: 0;">
                    <label for="WarrantyMonths" class="field-label">Warranty Period (Months)</label>
                    <input type="number" name="WarrantyMonths" id="WarrantyMonths" class="premium-input" value="24" />
                </div>
            </div>

            <div id="ClothingFields" class="type-container" style="display:none;">
                <span class="form-section-title" style="color: var(--midnight); font-size: 0.65rem;">Material Details</span>
                <div class="field-group">
                    <label for="Size" class="field-label">Size Availability</label>
                    <input type="text" name="Size" id="Size" class="premium-input" placeholder="M, L, XL..." />
                </div>
                <div class="field-group" style="margin-bottom: 0;">
                    <label for="Material" class="field-label">Textile Material</label>
                    <input type="text" name="Material" id="Material" class="premium-input" placeholder="Organic Cotton, Silk..." />
                </div>
            </div>

            <div id="VehicleFields" class="type-container" style="display:none;">
                <span class="form-section-title" style="color: var(--midnight); font-size: 0.65rem;">Vehicle Origins</span>
                <div class="field-group">
                    <label for="Brand" class="field-label">Brand / Manufacturer</label>
                    <input type="text" name="Brand" id="Brand" class="premium-input" />
                </div>
                <div class="field-group">
                    <label for="Model" class="field-label">Model Designation</label>
                    <input type="text" name="Model" id="Model" class="premium-input" />
                </div>
                <div class="field-group" style="margin-bottom: 0;">
                    <label for="Year" class="field-label">Manufacturing Year</label>
                    <input type="number" name="Year" id="Year" class="premium-input" value="2024" />
                </div>
            </div>

            <div style="margin-top: 4rem;">
                <span class="form-section-title">Visual Assets</span>
                <p style="font-size: 0.8125rem; color: var(--text-muted); margin-bottom: 1.5rem;">Upload up to 5 high-resolution images. First image serves as the Main cover.</p>

                <div class="upload-box" onclick="document.getElementById('imageInput').click()">
                    <div class="upload-icon-wrap">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                            <polyline points="17 8 12 3 7 8"></polyline>
                            <line x1="12" y1="3" x2="12" y2="15"></line>
                        </svg>
                    </div>
                    <p style="font-weight: 700; font-size: 0.9375rem; color: var(--midnight);">Select Media Files</p>
                    <p style="font-size: 0.75rem; color: var(--text-muted); margin-top: 0.5rem;">PNG, JPEG, WEBP up to 8MB each</p>
                </div>

                <input type="file" name="images" id="imageInput" multiple accept=".jpg,.jpeg,.png,.webp"
                       style="display: none;" onchange="handleFileSelect(this)" />

                <div class="preview-list" id="previewGrid"></div>
            </div>

            <button type="submit" class="btn-submit-form">Add to Collection</button>
        </form>
    </div>
</div>

<script>
    function toggleFields() {
        const type = document.getElementById('Type').value;
        const fields = ['ElectronicFields', 'ClothingFields', 'VehicleFields'];
        fields.forEach(f => {
            document.getElementById(f).style.display = f.startsWith(type) ? 'block' : 'none';
        });
    }

    let selectedFiles = [];

    function handleFileSelect(input) {
        const files = Array.from(input.files);
        const total = selectedFiles.length + files.length;

        if (total > 5) {
            alert('Selection limited to 5 high-res assets.');
            input.value = '';
            return;
        }

        files.forEach(file => {
            selectedFiles.push(file);
            const reader = new FileReader();
            reader.onload = (e) => {
                const idx = selectedFiles.indexOf(file);
                addPreview(e.target.result, file.name, idx);
            };
            reader.readAsDataURL(file);
        });
    }

    function addPreview(src, name, index) {
        const grid = document.getElementById('previewGrid');
        const item = document.createElement('div');
        item.className = 'preview-thumb';
        item.innerHTML = `
            <img src="${src}" alt="${name}">
            <button type="button" class="remove-thumb" onclick="removeFile(this)">×</button>
        `;
        grid.appendChild(item);
    }

    function removeFile(btn) {
        alert('File selection cleared for safety. Please re-select your preferred assets.');
        document.getElementById('imageInput').value = '';
        document.getElementById('previewGrid').innerHTML = '';
        selectedFiles = [];
    }
</script>
