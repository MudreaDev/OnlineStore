@model OnlineStore.WebUI.Models.CartViewModel
@using OnlineStore.Domain.Singleton

@{
    ViewData["Title"] = "Your Shopping Cart";
    var cartItems = ViewBag.CartItems as List<(OnlineStore.Domain.Entities.Product Product, int Quantity)>;
    decimal total = ViewBag.Total ?? 0;
    decimal freeShippingThreshold = ApplicationConfigurationManager.Instance.FreeShippingThreshold;
}

<style>
    .cart-page {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 4rem;
        padding-top: 4rem;
        margin-bottom: 8rem;
    }

    .cart-title {
        font-family: var(--font-serif);
        font-size: 3rem;
        letter-spacing: -0.04em;
        margin-bottom: 3rem;
        grid-column: span 2;
    }

    /* --- Item List --- */
    .cart-items {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .cart-item {
        background: #fff;
        border: 1px solid var(--border-light);
        border-radius: 20px;
        padding: 1.5rem 2rem;
        display: flex;
        align-items: center;
        gap: 2rem;
        transition: var(--transition);
    }

    .cart-item:hover {
        border-color: var(--text-dark);
        transform: translateX(10px);
    }

    .item-visual {
        width: 100px;
        height: 100px;
        background: var(--bg-warm);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        flex-shrink: 0;
    }

    .item-info {
        flex: 1;
    }

    .item-name {
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 0.25rem;
    }

    .item-meta {
        font-size: 0.875rem;
        color: var(--text-muted);
    }

    .item-quantity {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-weight: 700;
        background: var(--bg-warm);
        padding: 0.5rem 1rem;
        border-radius: 99px;
    }

    .item-subtotal {
        font-weight: 800;
        font-size: 1.125rem;
        min-width: 100px;
        text-align: right;
    }

    .btn-remove {
        color: #a4161a;
        font-weight: 700;
        font-size: 0.875rem;
        margin-left: 1rem;
    }

    .btn-remove:hover {
        text-decoration: underline;
    }

    /* --- Sidebar Summary --- */
    .cart-sidebar {
        position: sticky;
        top: 120px;
        height: fit-content;
    }

    .summary-card {
        background: #fff;
        border: 1px solid var(--border-light);
        border-radius: 30px;
        padding: 2.5rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.04);
    }

    .summary-title {
        font-family: var(--font-serif);
        font-size: 1.75rem;
        margin-bottom: 2rem;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .summary-total {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-light);
        display: flex;
        justify-content: space-between;
        font-size: 1.5rem;
        font-weight: 800;
        font-family: var(--font-serif);
    }

    .shipping-note {
        margin-top: 1.5rem;
        padding: 1rem;
        background: #fdfdfb;
        border-radius: 12px;
        font-size: 0.8125rem;
        color: var(--text-muted);
        text-align: center;
    }

    .shipping-note.free {
        background: #ecfdf5;
        color: #065f46;
        font-weight: 700;
    }

    .btn-checkout {
        width: 100%;
        background: var(--accent-green);
        color: #fff;
        border: none;
        border-radius: 12px;
        padding: 1.25rem;
        font-size: 1.125rem;
        font-weight: 700;
        cursor: pointer;
        transition: var(--transition);
        margin-top: 2rem;
    }

    .btn-checkout:hover {
        background: var(--accent-green-hover);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(45, 106, 79, 0.2);
    }

    .empty-cart {
        grid-column: span 2;
        text-align: center;
        padding: 8rem 2rem;
        background: #fff;
        border-radius: 40px;
        border: 1px dashed var(--border-light);
    }

    @@media (max-width: 1024px) {
        .cart-page {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .cart-title {
            grid-column: span 1;
        }

        .empty-cart {
            grid-column: span 1;
        }
    }
</style>

<div class="container cart-page">
    <h1 class="cart-title">Your Shopping Bag</h1>

    @if (cartItems != null && cartItems.Any())
    {
        <div class="cart-items">
            @foreach (var item in cartItems)
            {
                var typeName = item.Product.GetType().Name.Replace("Product", "");
                var emoji = typeName switch
                {
                    "Electronic" => "ðŸ”Œ",
                    "Clothing" => "ðŸ‘•",
                    "Vehicle" => "ðŸš—",
                    _ => "ðŸ“¦"
                };

                <div class="cart-item">
                    <div class="item-visual">@emoji</div>
                    <div class="item-info">
                        <h3 class="item-name">@item.Product.Name</h3>
                        <p class="item-meta">Unit Price: @item.Product.Price.ToString("C")</p>
                    </div>
                    <div class="item-quantity">
                        <span style="opacity: 0.5; font-size: 0.75rem">QTY</span>
                        @item.Quantity
                    </div>
                    <div class="item-subtotal">
                        @((item.Product.Price * item.Quantity).ToString("C"))
                    </div>
                    <a asp-action="Remove" asp-route-id="@item.Product.Id" class="btn-remove">Remove</a>
                </div>
            }
        </div>

        <aside class="cart-sidebar">
            <div class="summary-card">
                <h2 class="summary-title">Summary</h2>
                <div class="summary-row">
                    <span>Subtotal</span>
                    <span>@total.ToString("C")</span>
                </div>
                <div class="summary-row">
                    <span>Shipping</span>
                    <span>@(total >= freeShippingThreshold ? "FREE" : "Calculated at checkout")</span>
                </div>

                @if (total < freeShippingThreshold)
                {
                    <div class="shipping-note">
                        Add <strong>@((freeShippingThreshold - total).ToString("C"))</strong> more to unlock <strong>Free
                            Shipping</strong>.
                    </div>
                }
                else
                {
                    <div class="shipping-note free">
                        âœ“ Your order qualifies for Free Shipping.
                    </div>
                }

                <div class="summary-total">
                    <span>Total</span>
                    <span>@total.ToString("C")</span>
                </div>

                <form asp-action="Checkout" method="post">
                    <button type="submit" class="btn-checkout">Checkout Selection</button>
                </form>

                <p style="text-align: center; margin-top: 1.5rem; font-size: 0.8125rem; color: var(--text-muted)">
                    Taxes calculated at the next step.
                </p>
            </div>
        </aside>
    }
    else
    {
        <div class="empty-cart">
            <div style="font-size: 5rem; margin-bottom: 2rem">ðŸ›’</div>
            <h2 class="cart-title" style="font-size: 2.5rem; text-align: center; margin-bottom: 1rem">Your bag is empty</h2>
            <p class="hero-subtitle">Selection seems a bit light. Let's find some essentials for your home.</p>
            <a asp-controller="Home" asp-action="Index" class="btn-checkout"
                style="display: inline-block; width: auto; padding-left: 3rem; padding-right: 3rem">Start Shopping</a>
        </div>
    }
</div>
