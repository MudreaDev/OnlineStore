@model OnlineStore.WebUI.Models.CartViewModel

<h2>Your Shopping Cart</h2>

@if (ViewBag.CartItems != null && ((List<(OnlineStore.Domain.Entities.Product Product, int
Quantity)>)ViewBag.CartItems).Any())
{
    var items = (List<(OnlineStore.Domain.Entities.Product Product, int Quantity)>)ViewBag.CartItems;
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product.Price * item.Quantity)</td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.Product.Id" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @ViewBag.Total</h3>

    <form asp-action="Checkout" method="post">
        <button type="submit" class="btn btn-success">Checkout</button>
    </form>
}
else
{
    <p>Your cart is empty.</p>
}

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
