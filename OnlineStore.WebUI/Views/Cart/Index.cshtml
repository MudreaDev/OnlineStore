@model OnlineStore.Domain.Entities.ShoppingCart

<h2>Your Shopping Cart</h2>

@if (Model.Products.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.CalculateTotal()</h3>

    <form asp-action="Checkout" method="post">
        <button type="submit" class="btn btn-success">Checkout</button>
    </form>
}
else
{
    <p>Your cart is empty.</p>
}

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
