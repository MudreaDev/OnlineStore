@model OnlineStore.Domain.Entities.User
@using OnlineStore.Domain.Entities

@{
    ViewData["Title"] = "Your Collection Account";
    bool isCustomer = Model is Customer;
    var customer = Model as Customer;
}

<style>
    .profile-page {
        max-width: 800px;
        margin: 0 auto;
        padding: 4rem 1.5rem;
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 3rem;
        margin-bottom: 5rem;
    }

    .avatar-circle {
        width: 120px;
        height: 120px;
        background: var(--text-dark);
        color: var(--accent-green);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: var(--font-serif);
        font-size: 3.5rem;
        flex-shrink: 0;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .header-info h1 {
        font-family: var(--font-serif);
        font-size: 2.5rem;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
    }

    .role-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: #fff;
        border: 1.5px solid var(--border-light);
        padding: 0.4rem 1rem;
        border-radius: 99px;
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .role-badge.admin {
        border-color: var(--text-dark);
        color: var(--text-dark);
    }

    .role-badge.customer {
        border-color: var(--accent-green);
        color: var(--accent-green);
    }

    .profile-card {
        background: #fff;
        border: 1px solid var(--border-light);
        border-radius: 30px;
        padding: 4rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
    }

    .section-title {
        font-family: var(--font-serif);
        font-size: 1.5rem;
        margin-bottom: 2.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .section-title::after {
        content: '';
        flex: 1;
        height: 1px;
        background: var(--border-light);
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2.5rem;
        margin-bottom: 4rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .form-group.full {
        grid-column: span 2;
    }

    .form-label {
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--text-muted);
    }

    .form-control {
        background: var(--bg-warm);
        border: 1.5px solid transparent;
        border-radius: 12px;
        padding: 1rem 1.25rem;
        font-family: var(--font-main);
        font-size: 1rem;
        color: var(--text-dark);
        transition: var(--transition);
        outline: none;
    }

    .form-control:focus {
        background: #fff;
        border-color: var(--accent-green);
        box-shadow: 0 0 0 5px rgba(45, 106, 79, 0.1);
    }

    .btn-row {
        display: flex;
        gap: 1.5rem;
        justify-content: flex-end;
    }

    .btn-save {
        background: var(--text-dark);
        color: #fff;
        border: none;
        border-radius: 12px;
        padding: 1rem 3rem;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        transition: var(--transition);
    }

    .btn-save:hover {
        background: var(--accent-green);
        transform: translateY(-2px);
    }

    .btn-cancel {
        background: #fff;
        color: var(--text-muted);
        border: 1.5px solid var(--border-light);
        border-radius: 12px;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        transition: var(--transition);
    }

    .btn-cancel:hover {
        border-color: var(--text-dark);
        color: var(--text-dark);
    }

    @@media (max-width: 600px) {
        .profile-header {
            flex-direction: column;
            text-align: center;
            gap: 1.5rem;
        }

        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-group.full {
            grid-column: span 1;
        }

        .profile-card {
            padding: 3rem 1.5rem;
        }
    }
</style>

<div class="profile-page">
    <header class="profile-header">
        <div class="avatar-circle">
            @Model.Username.Substring(0, 1).ToUpper()
        </div>
        <div class="header-info">
            <h1>Personal Identity</h1>
            <div class="role-badge @(Model is Admin ? "admin" : "customer")">
                <span>@(Model is Admin ? "● Administrator" : "○ Customer")</span>
            </div>
        </div>
    </header>

    <div class="profile-card">
        <form asp-action="Edit" method="post">
            <h3 class="section-title">Core Information</h3>

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label" for="username">Public Username</label>
                    <input type="text" name="username" id="username" class="form-control" value="@Model.Username"
                        required />
                </div>

                <div class="form-group">
                    <label class="form-label" for="email">Contact Email</label>
                    <input type="email" name="email" id="email" class="form-control" value="@Model.Email" required />
                </div>

                @if (isCustomer && customer != null)
                {
                    <div class="form-group full">
                        <label class="form-label" for="shippingAddress">Delivery Residence</label>
                        <textarea name="shippingAddress" id="shippingAddress" class="form-control"
                            style="min-height: 120px; resize: vertical">@customer.ShippingAddress</textarea>
                    </div>
                }
            </div>

            <div class="btn-row">
                <a asp-controller="Home" asp-action="Index" class="btn-cancel">Discard</a>
                <button type="submit" class="btn-save">Sync Changes</button>
            </div>
        </form>
    </div>
</div>
