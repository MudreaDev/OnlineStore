@model IEnumerable<OnlineStore.Domain.Entities.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="orders-page">
    <div class="hero-section">
        <h1 class="display-title">Order <span class="highlight">History</span></h1>
        <p class="subtitle">Review your past purchases and track their status.</p>
    </div>

    @if (!Model.Any())
    {
        <div class="no-results mt-4">
            <div class="no-results-icon">ðŸ“¦</div>
            <h3>No orders yet</h3>
            <p>You haven't placed any orders. Start shopping today!</p>
            <a asp-controller="Home" asp-action="Index" class="btn-primary-auth mt-2"
                style="display:inline-block; padding: 0.75rem 2rem;">Shop Now</a>
        </div>
    }
    else
    {
        <div class="order-table-container">
            <table class="minimal-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="order-id-cell">#@order.Id.ToString().Substring(0, 8)...</td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>
                                <span class="status-badge status-@order.Status.ToString().ToLower()">
                                    @order.Status
                                </span>
                            </td>
                            <td class="price-cell">@order.Total.ToString("C")</td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn-action-view">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
