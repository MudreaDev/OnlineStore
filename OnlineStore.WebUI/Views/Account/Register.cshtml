@model OnlineStore.WebUI.Models.RegisterViewModel

@{
    ViewData["Title"] = "Join the Collection";
}

<style>
    .auth-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 350px);
        padding: 2rem 1rem;
    }

    .auth-card {
        background: #fff;
        border: 1px solid var(--border-light);
        border-radius: 24px;
        padding: 1.75rem 2rem;
        width: 100%;
        max-width: 480px;
        box-shadow: 0 10px 50px rgba(0, 0, 0, 0.05);
        text-align: center;
    }

    .auth-title {
        font-family: var(--font-serif);
        font-size: 1.375rem;
        letter-spacing: -0.03em;
        margin-bottom: 0.25rem;
    }

    .auth-subtitle {
        color: var(--text-muted);
        font-size: 0.8rem;
        margin-bottom: 1rem;
        max-width: 380px;
        margin-left: auto;
        margin-right: auto;
    }

    .auth-form {
        text-align: left;
    }

    .section-headline {
        font-family: var(--font-serif);
        font-size: 0.875rem;
        margin-bottom: 0.75rem;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--text-dark);
    }

    .section-headline::after {
        content: '';
        flex: 1;
        height: 1px;
        background: var(--border-light);
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .form-group {
        margin-bottom: 0.75rem;
    }

    .form-group.full {
        grid-column: span 2;
    }

    .form-label {
        font-size: 0.65rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--text-muted);
        margin-bottom: 0.3rem;
        display: block;
    }

    .form-control {
        width: 100%;
        background: var(--bg-warm);
        border: 1.5px solid transparent;
        border-radius: 10px;
        padding: 0.6rem 1rem;
        font-family: var(--font-main);
        font-size: 0.8125rem;
        color: var(--text-dark);
        transition: var(--transition);
        outline: none;
    }

    .form-control:focus {
        background: #fff;
        border-color: var(--accent-green);
        box-shadow: 0 0 0 5px rgba(45, 106, 79, 0.1);
    }

    .input-error {
        color: #a4161a;
        font-size: 0.8rem;
        font-weight: 600;
        margin-top: 0.5rem;
        display: block;
    }

    .btn-register {
        width: 100%;
        background: var(--text-dark);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 0.75rem;
        font-size: 0.875rem;
        font-weight: 700;
        cursor: pointer;
        transition: var(--transition);
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .btn-register:hover {
        background: var(--accent-green);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(45, 106, 79, 0.2);
    }

    .auth-link {
        display: block;
        margin-top: 0.75rem;
        font-weight: 600;
        color: var(--text-muted);
        text-align: center;
        font-size: 0.8125rem;
    }

    .auth-link strong {
        color: var(--accent-green);
    }

    @@media (max-width: 600px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-group.full {
            grid-column: span 1;
        }

        .auth-card {
            padding: 1.5rem 1rem;
        }
    }
</style>

<div class="auth-page">
    <div class="auth-card">
        <h1 class="auth-title">Join the collection</h1>
        <p class="auth-subtitle">Create an account to start curating your minimalist home and lifestyle.</p>

        @if (!ViewContext.ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="ModelOnly"
                style="padding: 1rem; background: #fff1f2; border: 1px solid #fecaca; border-radius: 12px; color: #991b1b; font-size: 0.875rem; margin-bottom: 2rem; text-align: left;">
            </div>
        }

        <form asp-action="Register" method="post" class="auth-form">
            <h3 class="section-headline">Account Details</h3>

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="minimal.user" />
                    <span asp-validation-for="Username" class="input-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="you@minimal.com" />
                    <span asp-validation-for="Email" class="input-error"></span>
                </div>
            </div>

            <h3 class="section-headline">Security</h3>

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="input-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" class="input-error"></span>
                </div>
            </div>

            <h3 class="section-headline">Fulfillment</h3>

            <div class="form-group">
                <label asp-for="ShippingAddress" class="form-label">Primary Shipping Address</label>
                <textarea asp-for="ShippingAddress" class="form-control" style="min-height: 100px; resize: vertical"
                    placeholder="Where should we send your orders?"></textarea>
                <span asp-validation-for="ShippingAddress" class="input-error"></span>
            </div>

            <button type="submit" class="btn-register">Create Account</button>
        </form>

        <a asp-action="Login" class="auth-link">Already a member? <strong>Sign in here</strong></a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
