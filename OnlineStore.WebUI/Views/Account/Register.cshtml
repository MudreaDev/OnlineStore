@model OnlineStore.WebUI.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Create Account</h2>
        <p class="auth-subtitle">Join our minimal store community</p>

        <form asp-action="Register" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-input" placeholder="Enter username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-input" placeholder="example@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-input" placeholder="Min. 6 characters" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-input" placeholder="Repeat password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ShippingAddress" class="form-label">Shipping Address</label>
                <textarea asp-for="ShippingAddress" class="form-input" rows="2" placeholder="Full address for shipping"></textarea>
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary-auth w-100">Register</button>
        </form>

        <div class="auth-footer mt-4 text-center">
            <p>Already have an account? <a asp-action="Login" class="auth-link">Login instead</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
