@model OnlineStore.Domain.Entities.Product
@using OnlineStore.Domain.Entities

@{
    ViewData["Title"] = Model.Name;
    var images = Model.Images.OrderBy(i => i.DisplayOrder).ToList();
    var mainImage = images.FirstOrDefault(i => i.IsMain) ?? images.FirstOrDefault();

    var typeName = Model.GetType().Name.Replace("Product", "");
    var emoji = typeName switch
    {
        "Electronic" => "üîå",
        "Clothing" => "üëï",
        "Vehicle" => "üöó",
        _ => "üì¶"
    };
}

<style>
    .details-page {
        padding-top: 4rem;
        padding-bottom: 8rem;
    }

    .details-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 5rem;
        align-items: start;
    }

    /* --- Image Gallery --- */
    .gallery-container {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .main-image-wrap {
        width: 100%;
        aspect-ratio: 4/5;
        background: #fff;
        border: 1px solid var(--border-light);
        border-radius: 30px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .main-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .main-emoji {
        font-size: 8rem;
    }

    .thumbnail-strip {
        display: flex;
        gap: 1rem;
        overflow-x: auto;
        padding-bottom: 0.5rem;
    }

    .thumb {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        cursor: pointer;
        border: 2px solid transparent;
        overflow: hidden;
        flex-shrink: 0;
        transition: var(--transition);
        background: #fff;
    }

    .thumb.active {
        border-color: var(--accent-green);
    }

    .thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* --- Right Content --- */
    .details-header {
        margin-bottom: 3rem;
    }

    .details-cat {
        display: inline-block;
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--accent-green);
        margin-bottom: 1rem;
    }

    .details-title {
        font-family: var(--font-serif);
        font-size: 3.5rem;
        line-height: 1.1;
        letter-spacing: -0.04em;
        margin-bottom: 1rem;
    }

    .details-price {
        font-size: 2rem;
        font-weight: 800;
        letter-spacing: -0.02em;
    }

    .details-section {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border-light);
    }

    .section-title {
        font-family: var(--font-serif);
        font-size: 1.25rem;
        margin-bottom: 1.25rem;
    }

    .details-desc {
        font-size: 1rem;
        color: var(--text-muted);
        line-height: 1.8;
    }

    .spec-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .spec-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .spec-label {
        font-size: 0.7rem;
        font-weight: 800;
        text-transform: uppercase;
        color: var(--text-muted);
        letter-spacing: 0.05em;
    }

    .spec-value {
        font-weight: 600;
        color: var(--text-dark);
    }

    .actions-bar {
        margin-top: 4rem;
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .btn-checkout {
        flex: 1;
        background: var(--text-dark);
        color: #fff;
        border: none;
        border-radius: 15px;
        padding: 1.5rem;
        font-size: 1.125rem;
        font-weight: 700;
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .btn-checkout:hover {
        background: var(--accent-green);
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(45, 106, 79, 0.2);
    }

    .back-btn {
        margin-top: 2rem;
        display: inline-block;
        font-weight: 600;
        color: var(--text-muted);
    }

    @@media (max-width: 1024px) {
        .details-grid {
            grid-template-columns: 1fr;
            gap: 4rem;
        }

        .details-title {
            font-size: 2.75rem;
        }
    }
</style>

<div class="container details-page">
    <div class="details-grid">
        <div class="gallery-container">
            <div class="main-image-wrap">
                @if (mainImage != null)
                {
                    <img src="@mainImage.ImageUrl" id="mainImageDisplay" class="main-img" alt="@Model.Name">
                }
                else
                {
                    <div class="main-emoji">@emoji</div>
                }
            </div>

            @if (images.Count > 1)
            {
                <div class="thumbnail-strip">
                    @foreach (var img in images)
                    {
                        <div class="thumb @(img == mainImage ? "active" : "")" onclick="swapImage('@img.ImageUrl', this)">
                            <img src="@img.ImageUrl" alt="Thumbnail">
                        </div>
                    }
                </div>
            }
        </div>

        <div class="details-content">
            <div class="details-header">
                <span class="details-cat">@typeName Selection</span>
                <h1 class="details-title">@Model.Name</h1>
                <div class="details-price">@Model.Price.ToString("C")</div>
            </div>

            <div class="details-section">
                <h3 class="section-title">Manifesto</h3>
                <p class="details-desc">@Model.GetDescription()</p>
            </div>

            <div class="details-section">
                <h3 class="section-title">Specifications</h3>
                <div class="spec-grid">
                    @if (Model is ElectronicProduct electro)
                    {
                        <div class="spec-item">
                            <span class="spec-label">Warranty</span>
                            <span class="spec-value">@electro.WarrantyMonths Months</span>
                        </div>
                    }
                    else if (Model is ClothingProduct clothing)
                    {
                        <div class="spec-item">
                            <span class="spec-label">Size</span>
                            <span class="spec-value">@clothing.Size</span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Material</span>
                            <span class="spec-value">@clothing.Material</span>
                        </div>
                    }
                    else if (Model is VehicleProduct vehicle)
                    {
                        <div class="spec-item">
                            <span class="spec-label">Brand</span>
                            <span class="spec-value">@vehicle.Brand</span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Model</span>
                            <span class="spec-value">@vehicle.Model</span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Year</span>
                            <span class="spec-value">@vehicle.Year</span>
                        </div>
                    }
                    <div class="spec-item">
                        <span class="spec-label">Stock</span>
                        <span class="spec-value" style="color: @(Model.Stock > 0 ? "var(--accent-green)" : "#a4161a")">
                            @(Model.Stock > 0 ? "In Stock (" + Model.Stock + ")" : "Out of Stock")
                        </span>
                    </div>
                </div>
            </div>

            <div class="actions-bar">
                @if (Model.Stock > 0)
                {
                    <form asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" method="post" style="flex: 1">
                        <button type="submit" class="btn-checkout">
                            <span>Add to Shopping Bag</span>
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2.5">
                                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4H6z"></path>
                                <line x1="3" y1="6" x2="21" y2="6"></line>
                                <path d="M16 10a4 4 0 0 1-8 0"></path>
                            </svg>
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn-checkout" disabled
                        style="opacity: 0.5; cursor: not-allowed; background: var(--text-muted)">Sold Out</button>
                }
            </div>

            <a asp-action="Index" class="back-btn">‚Üê Back to collection</a>
        </div>
    </div>
</div>

<script>
    function swapImage(src, thumb) {
        document.getElementById('mainImageDisplay').src = src;
        document.querySelectorAll('.thumb').forEach(t => t.classList.remove('active'));
        thumb.classList.add('active');
    }
</script>
