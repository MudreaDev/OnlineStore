@model OnlineStore.Domain.Entities.Product
@using OnlineStore.Domain.Entities

@{
    ViewData["Title"] = Model.Name;
    var images = Model.Images.OrderBy(i => i.DisplayOrder).ToList();
    var mainImage = images.FirstOrDefault(i => i.IsMain) ?? images.FirstOrDefault();

    var typeName = Model.GetType().Name.Replace("Product", "");
    var emoji = typeName switch
    {
        "Electronic" => "ðŸ”Œ",
        "Clothing" => "ðŸ‘•",
        "Vehicle" => "ðŸš—",
        _ => "ðŸ“¦"
    };
}

<style>
    .details-page {
        padding-top: 3rem;
        padding-bottom: 8rem;
    }

    .details-grid {
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 6rem;
        align-items: start;
    }

    /* --- Editorial Gallery --- */
    .gallery-stack {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: sticky;
        top: 100px;
    }

    .main-visual-wrap {
        width: 100%;
        aspect-ratio: 4/5;
        background: #fff;
        border: 1px solid var(--border-subtle);
        border-radius: 32px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        box-shadow: var(--shadow-lg);
    }

    .main-img-show {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s var(--transition-smooth);
    }

    .main-emoji-hero {
        font-size: 8rem;
        opacity: 0.8;
    }

    .thumb-pills {
        display: flex;
        gap: 1rem;
        overflow-x: auto;
        padding: 0.5rem;
    }

    .thumb-pill {
        width: 72px;
        height: 72px;
        border-radius: 16px;
        cursor: pointer;
        border: 2px solid transparent;
        overflow: hidden;
        flex-shrink: 0;
        transition: var(--transition-smooth);
        background: #fff;
        box-shadow: var(--shadow-sm);
    }

    .thumb-pill.active {
        border-color: var(--accent-primary);
        transform: scale(1.1);
        box-shadow: var(--shadow-md);
    }

    .thumb-pill img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* --- Right Editorial Content --- */
    .product-manifesto {
        margin-bottom: 2.5rem;
    }

    .manif-cat {
        display: inline-block;
        font-family: var(--font-display);
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--accent-primary);
        margin-bottom: 1rem;
    }

    .manif-title {
        font-family: var(--font-display);
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -0.04em;
        color: var(--midnight);
        margin-bottom: 1.5rem;
    }

    .manif-price {
        font-family: var(--font-display);
        font-size: 2.25rem;
        font-weight: 300;
        color: var(--text-main);
        letter-spacing: -0.02em;
    }

    .manif-section {
        margin-top: 4rem;
        padding-top: 2.5rem;
        border-top: 1px solid var(--border-subtle);
    }

    .manif-section-title {
        font-family: var(--font-display);
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: var(--midnight);
    }

    .manif-text {
        font-size: 1.0625rem;
        color: var(--text-muted);
        line-height: 1.8;
        font-weight: 300;
    }

    /* Technical Specs as Glassy Badges */
    .spec-cloud {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .spec-card {
        background: #fff;
        border: 1px solid var(--border-subtle);
        padding: 1.25rem;
        border-radius: 16px;
        transition: var(--transition-smooth);
    }

    .spec-card:hover {
        border-color: var(--accent-primary);
        background: var(--bg-base);
    }

    .spec-key {
        display: block;
        font-size: 0.65rem;
        font-weight: 800;
        text-transform: uppercase;
        color: var(--text-muted);
        letter-spacing: 0.1em;
        margin-bottom: 0.25rem;
    }

    .spec-val {
        font-family: var(--font-display);
        font-weight: 700;
        font-size: 1rem;
        color: var(--midnight);
    }

    /* Actions Bar */
    .bag-action-bar {
        margin-top: 5rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .btn-bag-add {
        background: var(--midnight);
        color: #fff;
        border: none;
        border-radius: 18px;
        padding: 1.5rem;
        font-size: 1.125rem;
        font-family: var(--font-display);
        font-weight: 700;
        cursor: pointer;
        transition: var(--transition-smooth);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        box-shadow: var(--shadow-sm);
    }

    .btn-bag-add:hover {
        background: var(--accent-primary);
        transform: translateY(-4px);
        box-shadow: 0 15px 40px rgba(5, 150, 105, 0.2);
    }

    .btn-bag-add:active {
        transform: translateY(0);
    }

    .back-nav {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.8125rem;
        font-weight: 600;
        color: var(--text-muted);
        text-decoration: none;
        transition: var(--transition-smooth);
        margin-bottom: 2rem;
    }

    .back-nav:hover {
        color: var(--accent-primary);
        transform: translateX(-5px);
    }

    @@media (max-width: 1024px) {
        .details-grid {
            grid-template-columns: 1fr;
            gap: 4rem;
        }

        .gallery-stack {
            position: relative;
            top: 0;
        }

        .manif-title {
            font-size: 2.75rem;
        }
    }
</style>

<div class="container details-page fade-in">
    <a asp-action="Index" class="back-nav">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Return to collection
    </a>

    <div class="details-grid">
        <div class="gallery-stack">
            <div class="main-visual-wrap">
                @if (mainImage != null)
                {
                    <img src="@mainImage.ImageUrl" id="heroImage" class="main-img-show" alt="@Model.Name">
                }
                else
                {
                    <div class="main-emoji-hero">@emoji</div>
                }
            </div>

            @if (images.Count > 1)
            {
                <div class="thumb-pills">
                    @foreach (var img in images)
                    {
                        <div class="thumb-pill @(img == mainImage ? "active" : "")" onclick="updateHero('@img.ImageUrl', this)">
                            <img src="@img.ImageUrl" alt="Detail View">
                        </div>
                    }
                </div>
            }
        </div>

        <div class="editorial-side">
            <div class="product-manifesto">
                <span class="manif-cat">Handpicked @typeName Selection</span>
                <h1 class="manif-title">@Model.Name</h1>
                <div class="manif-price">@Model.Price.ToString("C0")</div>
            </div>

            <div class="manif-section">
                <h3 class="manif-section-title">The Concept</h3>
                <p class="manif-text">@Model.GetDescription()</p>
            </div>

            <div class="manif-section">
                <h3 class="manif-section-title">Specifications</h3>
                <div class="spec-cloud">
                    @if (Model is ElectronicProduct electro)
                    {
                        <div class="spec-card">
                            <span class="spec-key">Protection</span>
                            <span class="spec-val">@electro.WarrantyMonths Months Warranty</span>
                        </div>
                    }
                    else if (Model is ClothingProduct clothing)
                    {
                        <div class="spec-card">
                            <span class="spec-key">Size & Fit</span>
                            <span class="spec-val">@clothing.Size</span>
                        </div>
                        <div class="spec-card">
                            <span class="spec-key">Material</span>
                            <span class="spec-val">@clothing.Material</span>
                        </div>
                    }
                    else if (Model is VehicleProduct vehicle)
                    {
                        <div class="spec-card">
                            <span class="spec-key">Maker</span>
                            <span class="spec-val">@vehicle.Brand</span>
                        </div>
                        <div class="spec-card">
                            <span class="spec-key">Definition</span>
                            <span class="spec-val">@vehicle.Model (@vehicle.Year)</span>
                        </div>
                    }
                    <div class="spec-card">
                        <span class="spec-key">Status</span>
                        <span class="spec-val" style="color: @(Model.Stock > 0 ? "var(--accent-primary)" : "#dc2626")">
                            @(Model.Stock > 0 ? "In Stock & Ready" : "Currently Unavailable")
                        </span>
                    </div>
                </div>
            </div>

            <div class="bag-action-bar">
                @if (Model.Stock > 0)
                {
                    <form asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" method="post" style="width: 100%">
                        <button type="submit" class="btn-bag-add">
                            <span>Add to Shopping Bag</span>
                            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2.5">
                                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4H6z"></path>
                                <line x1="3" y1="6" x2="21" y2="6"></line>
                                <path d="M16 10a4 4 0 0 1-8 0"></path>
                            </svg>
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn-bag-add" disabled
                        style="opacity: 0.5; background: var(--text-muted); cursor: not-allowed;">
                        Out of Stock
                    </button>
                }

                <p style="text-align: center; font-size: 0.75rem; color: var(--text-muted); letter-spacing: 0.025em;">
                    Free shipping on orders over â‚¬200. Secure checkout.
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    function updateHero(src, el) {
        const hero = document.getElementById('heroImage');
        if (hero) {
            hero.style.opacity = '0';
            setTimeout(() => {
                hero.src = src;
                hero.style.opacity = '1';
            }, 200);
        }
        document.querySelectorAll('.thumb-pill').forEach(tp => tp.classList.remove('active'));
        el.classList.add('active');
    }
</script>
