@model IEnumerable<OnlineStore.Domain.Entities.Product>
@{
    ViewData["Title"] = "The Collection";
}

<style>
    /* --- Grid Layout --- */
    .hero-banner {
        padding: 4rem 0 3rem;
        text-align: center;
    }

    .hero-title {
        font-family: var(--font-elegant);
        font-size: 3.5rem;
        color: var(--midnight);
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }

    .hero-subtitle {
        font-family: var(--font-display);
        font-size: 1.125rem;
        color: var(--text-muted);
        max-width: 600px;
        margin: 0 auto;
        font-weight: 300;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        margin-bottom: 6rem;
    }

    /* --- Luxury Card Design --- */
    .product-card {
        background: var(--surface);
        border: 1px solid var(--border-subtle);
        border-radius: 20px;
        transition: var(--transition-smooth);
        position: relative;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        text-decoration: none;
        color: inherit;
    }

    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
        border-color: var(--accent-primary);
    }

    /* Glass Badge for Categories */
    .glass-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        z-index: 10;
        padding: 0.35rem 0.75rem;
        border-radius: 10px;
        font-size: 0.625rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: var(--midnight);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .visual-container {
        height: 240px;
        background: #fdfdfb;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .card-emoji {
        font-size: 4rem;
        transition: transform 0.6s var(--transition-smooth);
    }

    .product-card:hover .product-img,
    .product-card:hover .card-emoji {
        transform: scale(1.08);
    }

    .info-container {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .product-name {
        font-family: var(--font-display);
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--midnight);
        margin-bottom: 0.5rem;
        line-height: 1.2;
    }

    .product-summary {
        font-size: 0.8125rem;
        color: var(--text-muted);
        margin-bottom: 1.25rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.6;
    }

    .price-tag {
        font-family: var(--font-display);
        font-size: 1.375rem;
        font-weight: 800;
        color: var(--accent-secondary);
        letter-spacing: -0.01em;
    }

    .card-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: auto;
    }

    .btn-buy {
        background: var(--midnight);
        color: #fff;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: var(--transition-smooth);
    }

    .btn-buy:hover {
        background: var(--accent-primary);
        transform: rotate(90deg);
    }

    .stock-pill {
        font-size: 0.625rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.35rem;
        margin-bottom: 0.75rem;
    }

    .stock-on {
        color: var(--accent-primary);
    }

    .stock-off {
        color: #dc2626;
    }

    /* --- Empty State --- */
    .empty-gallery {
        text-align: center;
        padding: 10rem 0;
        grid-column: span 4;
    }

    @@media (max-width: 1280px) {
        .product-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @@media (max-width: 900px) {
        .product-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .hero-title {
            font-size: 2.75rem;
        }
    }

    @@media (max-width: 600px) {
        .product-grid {
            grid-template-columns: 1fr;
        }

        .hero-banner {
            padding: 2rem 0;
        }
    }
</style>

<div class="container fade-in">
    <div class="hero-banner">
        <h1 class="hero-title">Refined Living</h1>
        <p class="hero-subtitle">Curated essentials designed for the modern home. Quality craftsmanship meeting timeless
            aesthetic.</p>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-gallery">
            <div style="font-size: 4rem; opacity: 0.2; margin-bottom: 2rem;">✧</div>
            <h3 style="font-family: var(--font-elegant); font-size: 2rem; color: var(--midnight);">No essentials found</h3>
            <p style="color: var(--text-muted); margin-bottom: 2rem;">Adjust your filters to discover our unique collection.
            </p>
            <a asp-action="Index" class="nav-link" style="text-decoration: underline;">Clear All Filters</a>
        </div>
    }
    else
    {
        <div class="product-grid">
            @foreach (var product in Model)
            {
                var typeName = product.GetType().Name.Replace("Product", "");
                var mainImage = product.Images.FirstOrDefault(i => i.IsMain) ?? product.Images.FirstOrDefault();

                var emoji = typeName switch
                {
                    "Electronic" => "🔌",
                    "Clothing" => "🏠",
                    "Vehicle" => "🚲",
                    _ => "📦"
                };

                <div class="product-card">
                    <span class="glass-badge">@typeName</span>

                    <a asp-action="Details" asp-route-id="@product.Id" class="visual-container">
                        @if (mainImage != null)
                        {
                            <img src="@mainImage.ImageUrl" alt="@product.Name" class="product-img" />
                        }
                        else
                        {
                            <div class="card-emoji">@emoji</div>
                        }
                    </a>

                    <div class="info-container">
                        <div class="stock-pill @(product.Stock > 0 ? "stock-on" : "stock-off")">
                            @(product.Stock > 0 ? "● AVAILABLE" : "○ SOLD OUT")
                        </div>

                        <a asp-action="Details" asp-route-id="@product.Id" style="text-decoration: none;">
                            <h2 class="product-name">@product.Name</h2>
                        </a>
                        <p class="product-summary">@product.GetDescription()</p>

                        <div class="card-footer">
                            <span class="price-tag">@product.Price.ToString("C0")</span>

                            @if (product.Stock > 0)
                            {
                                <form asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id" method="post">
                                    <button type="submit" class="btn-buy" title="Add to bag">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                            stroke-width="2.5">
                                            <line x1="12" y1="5" x2="12" y2="19"></line>
                                            <line x1="5" y1="12" x2="19" y2="12"></line>
                                        </svg>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span style="font-size: 0.7rem; font-weight: 700; color: var(--text-muted);">NOTIFY ME</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
