@model IEnumerable<Product>

@{
    ViewData["Title"] = "Store";
}

<div class="hero-section">
    <h1 class="display-title">Curated Collection</h1>
    <p class="subtitle">Premium quality products selected just for you.</p>
</div>

<div class="product-grid">
    @foreach (var product in Model)
    {
        <div class="product-card">
            <div class="product-image-placeholder">
                @if (product.GetType().Name.Contains("Electronic"))
                {
                    <span>🔌</span>
                }
                else
                {
                    <span>👕</span>
                }
            </div>
            <div class="product-details">
                <span class="product-category">@product.GetType().Name.Replace("Product", "")</span>
                <h2 class="product-name">@product.Name</h2>
                <p class="product-description">@product.GetDescription()</p>
                <div class="product-footer">
                    <span class="product-price">@product.Price.ToString("C")</span>
                    <button class="btn-add">Add to Cart</button>
                </div>
            </div>
        </div>
    }
</div>
