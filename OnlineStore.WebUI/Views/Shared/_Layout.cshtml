@using OnlineStore.Domain.Singleton
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ApplicationConfigurationManager.Instance.StoreName</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <header class="site-header">
        <div class="container navbar">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                @ApplicationConfigurationManager.Instance.StoreName.ToUpper()
            </a>
            <nav class="nav-links">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Shop</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

                @using Microsoft.AspNetCore.Http
                @using OnlineStore.WebUI.Extensions
                @using OnlineStore.Domain.Entities
                @using OnlineStore.Application.Repositories
                @inject IHttpContextAccessor HttpContextAccessor
                @inject DbUserRepository UserRepo

                @{
                    var session = HttpContextAccessor.HttpContext.Session;
                    var cart = session.Get<ShoppingCart>("Cart");
                    var count = cart?.ProductIds.Values.Sum() ?? 0;
                    var username = session.GetString("Username");
                }

                <a class="nav-link cart-link" asp-controller="Cart" asp-action="Index">Cart (@count)</a>

                @if (!string.IsNullOrEmpty(username))
                {
                    <a class="nav-link" asp-controller="Profile" asp-action="Index">Hello, @username</a>


                    var userIdStr = HttpContextAccessor.HttpContext.Session.GetString("UserId");
                    if (!string.IsNullOrEmpty(userIdStr) && Guid.TryParse(userIdStr, out Guid userId))
                    {
                        var user = UserRepo.GetById(userId);
                        if (user is Admin)
                        {
                            <a class="nav-link highlight" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Orders" asp-action="MyOrders">My Orders</a>
                        }
                    }


                    <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                }
            </nav>
        </div>
    </header>

    <main role="main" class="main-content container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mt-3">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3">@TempData["Error"]</div>
        }
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>&copy; 2026 @ApplicationConfigurationManager.Instance.StoreName. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
