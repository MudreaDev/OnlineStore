<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Minimal Store</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <header class="site-header">
        <div class="container navbar">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">MINIMAL<span
                    class="highlight">STORE</span></a>
            <nav class="nav-links">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Shop</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

                @using Microsoft.AspNetCore.Http
                @using OnlineStore.WebUI.Extensions
                @using OnlineStore.Domain.Entities
                @inject IHttpContextAccessor HttpContextAccessor
                @{
                    var session = HttpContextAccessor.HttpContext.Session;
                    var cart = session.Get<ShoppingCart>("Cart");
                    var count = cart?.ProductIds.Count ?? 0;
                    var username = session.GetString("Username");
                }

                <a class="nav-link cart-link" asp-controller="Cart" asp-action="Index">Cart (@count)</a>

                @if (!string.IsNullOrEmpty(username))
                {
                    <span class="nav-link">Hello, @username</span>

                    var user = _userRepo.GetById(Guid.Parse(HttpContextAccessor.HttpContext.Session.GetString("UserId")));
                    if (user is Admin)
                    {
                        <a class="nav-link highlight" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Orders" asp-action="MyOrders">My Orders</a>
                    }

                    <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                }
            </nav>
        </div>
    </header>

    <main role="main" class="main-content container">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>&copy; 2026 Minimal Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
