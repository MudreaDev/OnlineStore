<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Minimal Store</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="site-header">
        <div class="container navbar">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">MINIMAL<span class="highlight">STORE</span></a>
            <nav class="nav-links">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Shop</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class="nav-link cart-link" href="#">Cart (0)</a>
            </nav>
        </div>
    </header>
    
    <main role="main" class="main-content container">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>&copy; 2026 Minimal Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
